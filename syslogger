#!/bin/bash

SERVICE_NAME="system_logger.service"
LOG_FILE="/var/log/system_logger.log"
CONFIG_FILE="/var/lib/system_logger/config.conf"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

check_root() {
    if [ "$EUID" -ne 0 ]; then 
        echo -e "${RED}Ошибка: Эта команда требует прав root (используйте sudo)${NC}"
        exit 1
    fi
}

start_service() {
    check_root
    echo -e "${GREEN}Запуск system_logger...${NC}"
    systemctl start "$SERVICE_NAME"
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}Служба успешно запущена${NC}"
        sleep 1
        systemctl status "$SERVICE_NAME" --no-pager -l | head -10
    else
        echo -e "${RED}Ошибка при запуске службы${NC}"
        exit 1
    fi
}

stop_service() {
    check_root
    echo -e "${YELLOW}Остановка system_logger...${NC}"
    systemctl stop "$SERVICE_NAME"
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}Служба успешно остановлена${NC}"
    else
        echo -e "${RED}Ошибка при остановке службы${NC}"
        exit 1
    fi
}

restart_service() {
    check_root
    echo -e "${YELLOW}Перезапуск system_logger...${NC}"
    systemctl restart "$SERVICE_NAME"
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}Служба успешно перезапущена${NC}"
        sleep 1
        systemctl status "$SERVICE_NAME" --no-pager -l | head -10
    else
        echo -e "${RED}Ошибка при перезапуске службы${NC}"
        exit 1
    fi
}

status_service() {
    check_root
    echo -e "${GREEN}Статус system_logger:${NC}"
    systemctl status "$SERVICE_NAME" --no-pager -l
}

view_logs() {
    if [ ! -f "$LOG_FILE" ]; then
        echo -e "${YELLOW}Лог-файл не найден: $LOG_FILE${NC}"
        echo "Возможно, служба еще не запускалась."
        exit 1
    fi
    
    echo -e "${GREEN}Лог-файл: $LOG_FILE${NC}"
    echo -e "${GREEN}Последние 20 строк:${NC}"
    echo "---"
    tail -n 20 "$LOG_FILE"
}

show_config() {
    if [ ! -f "$CONFIG_FILE" ]; then
        echo -e "${YELLOW}Конфигурационный файл не найден: $CONFIG_FILE${NC}"
        echo "Используются значения по умолчанию."
        echo ""
        echo "Для создания конфигурационного файла используйте:"
        echo "  sudo mkdir -p $(dirname "$CONFIG_FILE")"
        echo "  sudo nano $CONFIG_FILE"
        exit 1
    fi
    
    echo -e "${GREEN}Конфигурационный файл: $CONFIG_FILE${NC}"
    echo -e "${GREEN}Текущая конфигурация:${NC}"
    echo "---"
    cat "$CONFIG_FILE"
}

show_help() {
    echo "Утилита управления system_logger"
    echo ""
    echo "Использование: syslogger {команда} [опции]"
    echo ""
    echo "Команды:"
    echo "  start       - Запустить службу"
    echo "  stop        - Остановить службу"
    echo "  restart     - Перезапустить службу"
    echo "  status      - Показать статус службы"
    echo "  logs        - Показать последние 20 строк лога и путь к файлу"
    echo "  config      - Показать текущую конфигурацию и путь к файлу"
    echo "  help        - Показать эту справку"
    echo ""
    echo "Примеры:"
    echo "  sudo syslogger start"
    echo "  sudo syslogger status"
    echo "  syslogger logs"
    echo "  syslogger config"
}

case "$1" in
    start)
        start_service
        ;;
    stop)
        stop_service
        ;;
    restart)
        restart_service
        ;;
    status)
        status_service
        ;;
    logs)
        view_logs
        ;;
    config)
        show_config
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        if [ -z "$1" ]; then
            show_help
        else
            echo -e "${RED}Неизвестная команда: $1${NC}"
            echo ""
            show_help
            exit 1
        fi
        ;;
esac

